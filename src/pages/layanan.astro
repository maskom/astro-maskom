---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Maskom Indonesia - Paket Layanan">
    <main class="container mx-auto px-4 py-8">
        <h1 class="text-4xl font-bold text-center text-gray-900 dark:text-white mb-10">Paket Layanan Internet Maskom Indonesia</h1>
        <section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6 text-center">
                <h3 class="text-2xl font-semibold text-blue-600 dark:text-blue-400 mb-4">Paket Rumah Basic</h3>
                <p class="text-gray-700 dark:text-gray-300 mb-4">Kecepatan 10 Mbps</p>
                <p class="text-4xl font-bold text-gray-900 dark:text-white mb-6">Rp 150.000<span class="text-lg font-normal">/bulan</span></p>
                <ul class="text-left text-gray-600 dark:text-gray-400 mb-6 space-y-2">
                    <li>✅ Browsing & Streaming Ringan</li>
                    <li>✅ Cocok untuk 1-2 Pengguna</li>
                    <li>✅ Pemasangan Gratis</li>
                </ul>
                <a href="#" class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg transition duration-300">Pilih Paket</a>
            </div>
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6 text-center">
                <h3 class="text-2xl font-semibold text-blue-600 dark:text-blue-400 mb-4">Paket Rumah Premium</h3>
                <p class="text-gray-700 dark:text-gray-300 mb-4">Kecepatan 50 Mbps</p>
                <p class="text-4xl font-bold text-gray-900 dark:text-white mb-6">Rp 300.000<span class="text-lg font-normal">/bulan</span></p>
                <ul class="text-left text-gray-600 dark:text-gray-400 mb-6 space-y-2">
                    <li>✅ Streaming HD & Gaming Online</li>
                    <li>✅ Cocok untuk 3-5 Pengguna</li>
                    <li>✅ Pemasangan Gratis</li>
                    <li>✅ Prioritas Dukungan</li>
                </ul>
                <a href="#" class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg transition duration-300">Pilih Paket</a>
            </div>
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6 text-center">
                <h3 class="text-2xl font-semibold text-blue-600 dark:text-blue-400 mb-4">Paket Bisnis Enterprise</h3>
                <p class="text-gray-700 dark:text-gray-300 mb-4">Kecepatan 100 Mbps</p>
                <p class="text-4xl font-bold text-gray-900 dark:text-white mb-6">Rp 750.000<span class="text-lg font-normal">/bulan</span></p>
                <ul class="text-left text-gray-600 dark:text-gray-400 mb-6 space-y-2">
                    <li>✅ Kinerja Tinggi untuk Bisnis</li>
                    <li>✅ SLA Terjamin</li>
                    <li>✅ Dukungan 24/7</li>
                    <li>✅ IP Publik Statis</li>
                </ul>
                <a href="#" class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg transition duration-300">Pilih Paket</a>
            </div>
        </section>
        <!-- Lebih banyak detail paket atau informasi tambahan dapat ditambahkan di sini -->
    </main>
</Layout>
