---
import Layout from '../layouts/Layout.astro';
import BandwidthChart from '../components/bandwidth/BandwidthChart.astro';
import Notifications from '../components/bandwidth/Notifications.astro';
import DataCapManagement from '../components/bandwidth/DataCapManagement.astro';
import OutageNotifications from '../components/notifications/OutageNotifications.astro';
import NotificationPreferences from '../components/notifications/NotificationPreferences.astro';
import AccountManagement from '../components/dashboard/AccountManagement.astro';
import BillingPayments from '../components/dashboard/BillingPayments.astro';
import ServiceManagement from '../components/dashboard/ServiceManagement.astro';
import SupportIntegration from '../components/dashboard/SupportIntegration.astro';
import LoyaltyDashboard from '../components/loyalty/LoyaltyDashboard.astro';
import { getMainPackages } from '../data/packages.ts';

const packages = getMainPackages();
import { createClient } from '@supabase/supabase-js';
import { outageNotificationService } from '../lib/notifications/outage-service';

const supabase = createClient(
  import.meta.env.SUPABASE_URL,
  import.meta.env.SUPABASE_KEY
);

// Get user session
const session = Astro.cookies.get('sb-access-token')?.value;

let bandwidthData = [];
let dataCap = null;
let notifications = [];
let unreadCount = 0;
let outageNotifications = [];
let outageUnreadCount = 0;
let notificationPreferences = null;
let loyaltyData = null;
let rewards = [];
let referrals = [];

if (session) {
  try {
    // Get bandwidth usage
    const usageResponse = await fetch(
      `${Astro.site.origin}/api/bandwidth/usage`,
      {
        headers: {
          Authorization: `Bearer ${session}`,
        },
      }
    );

    if (usageResponse.ok) {
      const usageData = await usageResponse.json();
      bandwidthData = usageData.usage || [];
      dataCap = usageData.dataCap;
      notifications = usageData.notifications || [];
      unreadCount =
        usageData.notifications?.filter(n => !n.is_read).length || 0;
    }

    // Get outage notifications
    const outageResponse = await fetch(
      `${Astro.site.origin}/api/notifications`,
      {
        headers: {
          Authorization: `Bearer ${session}`,
        },
      }
    );

    if (outageResponse.ok) {
      const outageData = await outageResponse.json();
      outageNotifications = outageData.notifications || [];
      // For now, we'll consider all outage notifications as unread
      // In a real implementation, you'd track read status
      outageUnreadCount = outageNotifications.length;
    }

    // Get notification preferences
    const prefsResponse = await fetch(
      `${Astro.site.origin}/api/notifications/preferences`,
      {
        headers: {
          Authorization: `Bearer ${session}`,
        },
      }
    );

    if (prefsResponse.ok) {
      const prefsData = await prefsResponse.json();
      notificationPreferences = prefsData.preferences;
    }

    // Get loyalty data
    const loyaltyResponse = await fetch(
      `${Astro.site.origin}/api/loyalty?section=overview`,
      {
        headers: {
          Authorization: `Bearer ${session}`,
        },
      }
    );

    if (loyaltyResponse.ok) {
      const loyaltyResult = await loyaltyResponse.json();
      loyaltyData = loyaltyResult.data;
    }

    // Get rewards catalog
    const rewardsResponse = await fetch(
      `${Astro.site.origin}/api/loyalty?section=rewards`,
      {
        headers: {
          Authorization: `Bearer ${session}`,
        },
      }
    );

    if (rewardsResponse.ok) {
      const rewardsResult = await rewardsResponse.json();
      rewards = rewardsResult.data.rewards || [];
    }

    // Get referrals
    const referralsResponse = await fetch(
      `${Astro.site.origin}/api/loyalty?section=referrals`,
      {
        headers: {
          Authorization: `Bearer ${session}`,
        },
      }
    );

    if (referralsResponse.ok) {
      const referralsResult = await referralsResponse.json();
      referrals = referralsResult.data.referrals || [];
    }
  } catch (error) {
    console.error('Error fetching dashboard data:', error);
  }
}
---

<Layout title="Dashboard">
  <div class="max-w-7xl mx-auto p-6">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-3xl font-bold text-gray-900">Customer Portal</h1>
      <div class="flex items-center space-x-4">
        {
          (unreadCount + outageUnreadCount) > 0 && (
            <div class="relative">
              <svg
                class="w-6 h-6 text-gray-600"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"
                />
              </svg>
              <span class="absolute -top-1 -right-1 px-1.5 py-0.5 bg-red-500 text-white text-xs rounded-full">
                {unreadCount + outageUnreadCount}
              </span>
            </div>
          )
        }
        <a
          href="/api/auth/signout"
          class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
        >
          Sign Out
        </a>
      </div>
    </div>

    <!-- Welcome Message -->
    <div
      class="bg-gradient-to-r from-blue-500 to-indigo-600 rounded-lg p-6 mb-6 text-white"
    >
      <h2 class="text-2xl font-bold mb-2">
        Selamat Datang di Customer Portal Maskom!
      </h2>
      <p class="opacity-90">
        Kelola akun, layanan, tagihan, dan dapatkan dukungan semua dalam satu tempat.
      </p>
    </div>

    <!-- Navigation Tabs -->
    <div class="border-b border-gray-200 mb-6">
      <nav class="-mb-px flex space-x-8">
        <button class="py-2 px-1 border-b-2 border-blue-500 font-medium text-sm text-blue-600">
          Overview
        </button>
        <button class="py-2 px-1 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-gray-700 hover:border-gray-300">
          Account
        </button>
        <button class="py-2 px-1 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-gray-700 hover:border-gray-300">
          Billing
        </button>
        <button class="py-2 px-1 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-gray-700 hover:border-gray-300">
          Services
        </button>
        <button class="py-2 px-1 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-gray-700 hover:border-gray-300">
          Loyalty
        </button>
        <button class="py-2 px-1 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-gray-700 hover:border-gray-300">
          Support
        </button>
      </nav>
    </div>

    <!-- Main Dashboard Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Left Column - Account & Billing -->
      <div class="space-y-6">
        <AccountManagement />
        <BillingPayments />
      </div>

      <!-- Middle Column - Services & Bandwidth -->
      <div class="space-y-6">
        <ServiceManagement />
        <BandwidthChart data={bandwidthData} dataCap={dataCap} />
        
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
          <DataCapManagement dataCap={dataCap} availablePackages={packages} />
          <Notifications
            notifications={notifications}
            unreadCount={unreadCount}
          />
        </div>
      </div>

      <!-- Right Column - Support & Notifications -->
      <div class="space-y-6">
        <SupportIntegration />
        
        <!-- Outage Notifications Section -->
        <OutageNotifications 
          notifications={outageNotifications} 
          unreadCount={outageUnreadCount} 
        />

        <!-- Notification Preferences -->
        <NotificationPreferences preferences={notificationPreferences} />
      </div>
    </div>

    <!-- Loyalty Section -->
    {loyaltyData && (
      <div class="mt-8">
        <LoyaltyDashboard 
          loyaltyData={loyaltyData} 
          rewards={rewards} 
          referrals={referrals} 
        />
      </div>
    )}

    <!-- Quick Actions -->
    <div class="mt-8 bg-white rounded-lg shadow-lg p-6">
      <h3 class="text-lg font-semibold text-gray-800 mb-4">Quick Actions</h3>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <a
