---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Astro/Hero.astro';
import Header from '../components/Astro/Header.astro';
import Footer from '../components/Astro/Footer.astro';
---

<Layout title="Maskom Indonesia - Layanan Internet Cepat & Stabil">
    <Header />
    <Hero title="Selamat Datang di Maskom Indonesia" subtitle="Layanan Internet Cepat dan Stabil untuk Kebutuhan Anda" />
    <main class="container mx-auto px-4 py-8">
        <section class="text-center my-12">
            <h2 class="text-3xl font-bold text-gray-800 dark:text-white mb-4">Mengenai Maskom Indonesia</h2>
            <p class="text-lg text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
                Maskom Indonesia menyediakan solusi internet berkecepatan tinggi dan stabil untuk rumah dan bisnis Anda.
                Nikmati pengalaman online tanpa hambatan untuk bekerja, belajar, dan hiburan.
            </p>
            <a href="/layanan" class="mt-6 inline-block bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg transition duration-300">Lihat Paket Layanan Kami</a>
        </section>
        <!-- Bagian lain akan ditambahkan di sini -->
    </main>
    <Footer />
</Layout>
