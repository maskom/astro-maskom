---
import Layout from '../../layouts/Layout.astro';
import { supabase } from '../../lib/supabase';

// Get user session
const user = await supabase.auth.getUser();

// Get billing data
let billingData = {
  currentBalance: 0,
  outstandingInvoices: [],
  recentTransactions: [],
  paymentMethods: [],
  monthlySpending: [],
  upcomingPayments: []
};

if (user.data.user) {
  try {
    // Get comprehensive billing data
    const response = await fetch(`${Astro.site.origin}/api/billing`, {
      headers: {
        Authorization: `Bearer ${Astro.cookies.get('sb-access-token')?.value}`,
      },
    });

    if (response.ok) {
      const data = await response.json();
      billingData = data.data || billingData;
    }
  } catch (error) {
    console.error('Error fetching billing data:', error);
  }
}

// Calculate statistics
const totalPaid = billingData.recentTransactions
  .filter(t => t.status === 'success')
  .reduce((sum, t) => sum + Number(t.amount), 0);

const avgMonthlySpending = totalPaid / 12; // Simple calculation
---

<Layout title="Billing Dashboard - Maskom Network">
  <div class="max-w-7xl mx-auto p-6">
    <!-- Header -->
    <div class="flex justify-between items-center mb-8">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Billing Dashboard</h1>
        <p class="text-gray-600 mt-2">Manage your invoices, payments, and billing preferences</p>
      </div>
      <div class="flex space-x-3">
        <a
          href="/billing/payment"
          class="inline-flex items-center px-4 py-2 bg-blue-600 text-white font-medium rounded-md hover:bg-blue-700"
        >
          <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path d="M4 4a2 2 0 00-2 2v1h16V6a2 2 0 00-2-2H4z" />
            <path fill-rule="evenodd" d="M18 9H2v5a2 2 0 002 2h12a2 2 0 002-2V9zM4 13a1 1 0 011-1h1a1 1 0 110 2H5a1 1 0 01-1-1zm5-1a1 1 0 100 2h1a1 1 0 100-2H9z" clip-rule="evenodd" />
          </svg>
          Make Payment
        </a>
        <button class="inline-flex items-center px-4 py-2 border border-gray-300 text-gray-700 font-medium rounded-md hover:bg-gray-50">
          <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
          Download Statement
        </button>
      </div>
    </div>

    <!-- Summary Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <!-- Current Balance -->
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center">
          <div class="p-3 bg-blue-100 rounded-full">
            <svg class="w-6 h-6 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
              <path d="M8.433 7.418c.155-.103.346-.196.567-.267v1.698a2.305 2.305 0 01-.567-.267C8.07 8.34 8 8.114 8 8c0-.114.07-.34.433-.582zM11 12.849v-1.698c.22.071.412.164.567.267.364.243.433.468.433.582 0 .114-.07.34-.433.582a2.305 2.305 0 01-.567.267z" />
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-13a1 1 0 10-2 0v.092a4.535 4.535 0 00-1.676.662C6.602 6.234 6 7.009 6 8c0 .99.602 1.765 1.324 2.246.48.32 1.054.545 1.676.662v1.941c-.391-.127-.68-.317-.843-.504a1 1 0 10-1.51 1.31c.562.649 1.413 1.076 2.353 1.253V15a1 1 0 102 0v-.092a4.535 4.535 0 001.676-.662C13.398 13.766 14 12.991 14 12c0-.99-.602-1.765-1.324-2.246A4.535 4.535 0 0011 9.092V7.151c.391.127.68.317.843.504a1 1 0 101.511-1.31c-.563-.649-1.413-1.076-2.354-1.253V5z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm text-gray-500">Current Balance</p>
            <p class="text-2xl font-bold text-gray-900">
              Rp {billingData.currentBalance.toLocaleString('id-ID')}
            </p>
            {billingData.outstandingInvoices.length > 0 && (
              <p class="text-xs text-red-600 mt-1">
                {billingData.outstandingInvoices.length} overdue
              </p>
            )}
          </div>
        </div>
      </div>

      <!-- Monthly Spending -->
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center">
          <div class="p-3 bg-green-100 rounded-full">
            <svg class="w-6 h-6 text-green-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4zm6 4a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm text-gray-500">Monthly Spending</p>
            <p class="text-2xl font-bold text-gray-900">
              Rp {Math.round(avgMonthlySpending).toLocaleString('id-ID')}
            </p>
            <p class="text-xs text-gray-500 mt-1">Average this year</p>
          </div>
        </div>
      </div>

      <!-- Total Paid -->
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center">
          <div class="p-3 bg-purple-100 rounded-full">
            <svg class="w-6 h-6 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm text-gray-500">Total Paid</p>
            <p class="text-2xl font-bold text-gray-900">
              Rp {totalPaid.toLocaleString('id-ID')}
            </p>
            <p class="text-xs text-gray-500 mt-1">All time</p>
          </div>
        </div>
      </div>

      <!-- Payment Methods -->
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center">
          <div class="p-3 bg-yellow-100 rounded-full">
            <svg class="w-6 h-6 text-yellow-600" fill="currentColor" viewBox="0 0 20 20">
              <path d="M4 4a2 2 0 00-2 2v1h16V6a2 2 0 00-2-2H4z" />
              <path fill-rule="evenodd" d="M18 9H2v5a2 2 0 002 2h12a2 2 0 002-2V9zM4 13a1 1 0 011-1h1a1 1 0 110 2H5a1 1 0 01-1-1zm5-1a1 1 0 100 2h1a1 1 0 100-2H9z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm text-gray-500">Payment Methods</p>
            <p class="text-2xl font-bold text-gray-900">
              {billingData.paymentMethods.length}
            </p>
            <p class="text-xs text-gray-500 mt-1">Saved methods</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Content Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Outstanding Invoices -->
      <div class="lg:col-span-2">
        <div class="bg-white rounded-lg shadow">
          <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
            <h2 class="text-lg font-semibold text-gray-900">Outstanding Invoices</h2>
            <a href="/billing/invoices" class="text-blue-600 hover:text-blue-800 text-sm font-medium">
              View All
            </a>
          </div>

          {billingData.outstandingInvoices.length > 0 ? (
            <div class="p-6">
              <div class="space-y-4">
                {billingData.outstandingInvoices.map(invoice => (
                  <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow">
                    <div class="flex items-center justify-between">
                      <div class="flex-1">
                        <div class="flex items-center space-x-3">
                          <h3 class="text-lg font-medium text-gray-900">{invoice.invoice_number}</h3>
                          <span class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${
                            invoice.status === 'overdue' 
                              ? 'bg-red-100 text-red-800' 
                              : 'bg-yellow-100 text-yellow-800'
                          }`}>
                            {invoice.status}
                          </span>
                        </div>
                        <div class="mt-2 flex items-center space-x-6 text-sm text-gray-500">
                          <span>Due: {new Date(invoice.due_date).toLocaleDateString('id-ID')}</span>
                          <span>Amount: Rp {Number(invoice.total).toLocaleString('id-ID')}</span>
                        </div>
                      </div>
                      <div class="flex items-center space-x-3">
                        <button class="inline-flex items-center px-3 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                          View Details
                        </button>
                        <button class="inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700">
                          Pay Now
                        </button>
                      </div>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          ) : (
            <div class="p-12 text-center">
              <svg class="mx-auto h-12 w-12 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5 5a3 3 0 015-2.236A3 3 0 0114.83 6H16a2 2 0 110 4h-5V9a1 1 0 10-2 0v1H4a2 2 0 110-4h1.17C5.06 5.687 5 5.35 5 5zm4 1V5a1 1 0 10-1 1h1zm3 0a1 1 0 10-1-1v1h1z" clip-rule="evenodd" />
                <path d="M9 11H3v5a2 2 0 002 2h4v-7zM11 18h4a2 2 0 002-2v-5h-6v7z" />
              </svg>
              <h3 class="mt-2 text-sm font-medium text-gray-900">No outstanding invoices</h3>
              <p class="mt-1 text-sm text-gray-500">You're all caught up with your payments!</p>
            </div>
          )}
        </div>

        <!-- Recent Transactions -->
        <div class="bg-white rounded-lg shadow mt-8">
          <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
            <h2 class="text-lg font-semibold text-gray-900">Recent Transactions</h2>
            <a href="/billing/history" class="text-blue-600 hover:text-blue-800 text-sm font-medium">
              View All
            </a>
          </div>

          {billingData.recentTransactions.length > 0 ? (
            <div class="overflow-x-auto">
              <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                  <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Transaction
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Date
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Amount
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Status
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Actions
                    </th>
                  </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                  {billingData.recentTransactions.map(transaction => (
                    <tr key={transaction.id}>
                      <td class="px-6 py-4 whitespace-nowrap">
                        <div class="text-sm font-medium text-gray-900">{transaction.order_id}</div>
                        <div class="text-sm text-gray-500">{transaction.payment_method?.name || 'Online Payment'}</div>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        {new Date(transaction.created_at).toLocaleDateString('id-ID')}
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        Rp {Number(transaction.amount).toLocaleString('id-ID')}
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap">
                        <span class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${
                          transaction.status === 'success' 
                            ? 'bg-green-100 text-green-800' 
                            : transaction.status === 'pending'
                              ? 'bg-yellow-100 text-yellow-800'
                              : 'bg-red-100 text-red-800'
                        }`}>
                          {transaction.status}
                        </span>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                        <button class="text-blue-600 hover:text-blue-900 mr-3">View Receipt</button>
                        {transaction.status === 'pending' && (
                          <button class="text-green-600 hover:text-green-900">Check Status</button>
                        )}
                      </td>
                    </tr>
                  ))}
                </tbody>
              </table>
            </div>
          ) : (
            <div class="p-12 text-center">
              <svg class="mx-auto h-12 w-12 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4zm6 4a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
              </svg>
              <h3 class="mt-2 text-sm font-medium text-gray-900">No transactions</h3>
              <p class="mt-1 text-sm text-gray-500">Your payment history will appear here.</p>
            </div>
          )}
        </div>
      </div>

      <!-- Right Sidebar -->
      <div class="space-y-8">
        <!-- Quick Actions -->
        <div class="bg-white rounded-lg shadow">
          <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-900">Quick Actions</h2>
          </div>
          <div class="p-6 space-y-3">
            <a href="/billing/payment" class="block w-full text-center px-4 py-3 bg-blue-600 text-white font-medium rounded-md hover:bg-blue-700">
              Make a Payment
            </a>
            <a href="/billing/methods" class="block w-full text-center px-4 py-3 border border-gray-300 text-gray-700 font-medium rounded-md hover:bg-gray-50">
              Manage Payment Methods
            </a>
            <a href="/billing/invoices" class="block w-full text-center px-4 py-3 border border-gray-300 text-gray-700 font-medium rounded-md hover:bg-gray-50">
              View All Invoices
            </a>
            <button class="block w-full text-center px-4 py-3 border border-gray-300 text-gray-700 font-medium rounded-md hover:bg-gray-50">
              Download Statement
            </button>
          </div>
        </div>

        <!-- Payment Methods -->
        <div class="bg-white rounded-lg shadow">
          <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
            <h2 class="text-lg font-semibold text-gray-900">Payment Methods</h2>
            <button class="text-blue-600 hover:text-blue-800 text-sm font-medium">
              Add New
            </button>
          </div>
          <div class="p-6">
            {billingData.paymentMethods.length > 0 ? (
              <div class="space-y-3">
                {billingData.paymentMethods.slice(0, 3).map(method => (
                  <div class="flex items-center justify-between p-3 border border-gray-200 rounded-lg">
                    <div class="flex items-center space-x-3">
                      <div class="w-10 h-10 bg-gray-100 rounded-full flex items-center justify-center">
                        {method.type === 'credit_card' ? (
                          <svg class="w-5 h-5 text-gray-600" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M4 4a2 2 0 00-2 2v1h16V6a2 2 0 00-2-2H4z" />
                            <path fill-rule="evenodd" d="M18 9H2v5a2 2 0 002 2h12a2 2 0 002-2V9zM4 13a1 1 0 011-1h1a1 1 0 110 2H5a1 1 0 01-1-1zm5-1a1 1 0 100 2h1a1 1 0 100-2H9z" clip-rule="evenodd" />
                          </svg>
                        ) : (
                          <svg class="w-5 h-5 text-gray-600" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M8.433 7.418c.155-.103.346-.196.567-.267v1.698a2.305 2.305 0 01-.567-.267C8.07 8.34 8 8.114 8 8c0-.114.07-.34.433-.582zM11 12.849v-1.698c.22.071.412.164.567.267.364.243.433.468.433.582 0 .114-.07.34-.433.582a2.305 2.305 0 01-.567.267z" />
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-13a1 1 0 10-2 0v.092a4.535 4.535 0 00-1.676.662C6.602 6.234 6 7.009 6 8c0 .99.602 1.765 1.324 2.246.48.32 1.054.545 1.676.662v1.941c-.391-.127-.68-.317-.843-.504a1 1 0 10-1.51 1.31c.562.649 1.413 1.076 2.353 1.253V15a1 1 0 102 0v-.092a4.535 4.535 0 001.676-.662C13.398 13.766 14 12.991 14 12c0-.99-.602-1.765-1.324-2.246A4.535 4.535 0 0011 9.092V7.151c.391.127.68.317.843.504a1 1 0 101.511-1.31c-.563-.649-1.413-1.076-2.354-1.253V5z" clip-rule="evenodd" />
                          </svg>
                        )}
                      </div>
                      <div>
                        <p class="text-sm font-medium text-gray-900">{method.display_name}</p>
                        <p class="text-xs text-gray-500 capitalize">{method.type.replace('_', ' ')}</p>
                      </div>
                    </div>
                    <button class="text-gray-400 hover:text-gray-600">
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z" />
                      </svg>
                    </button>
                  </div>
                ))}
                {billingData.paymentMethods.length > 3 && (
                  <p class="text-sm text-gray-500 text-center pt-2">
                    +{billingData.paymentMethods.length - 3} more methods
                  </p>
                )}
              </div>
            ) : (
              <div class="text-center py-4">
                <svg class="mx-auto h-8 w-8 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M4 4a2 2 0 00-2 2v1h16V6a2 2 0 00-2-2H4z" />
                  <path fill-rule="evenodd" d="M18 9H2v5a2 2 0 002 2h12a2 2 0 002-2V9zM4 13a1 1 0 011-1h1a1 1 0 110 2H5a1 1 0 01-1-1zm5-1a1 1 0 100 2h1a1 1 0 100-2H9z" clip-rule="evenodd" />
                </svg>
                <p class="mt-2 text-sm text-gray-500">No payment methods</p>
                <button class="mt-2 text-blue-600 hover:text-blue-800 text-sm font-medium">
                  Add Payment Method
                </button>
              </div>
            )}
          </div>
        </div>

        <!-- Billing Support -->
        <div class="bg-blue-50 rounded-lg p-6">
          <h3 class="text-lg font-semibold text-blue-900 mb-3">Need Help with Billing?</h3>
          <p class="text-blue-800 mb-4">
            Our support team is here to help you with any billing questions or issues.
          </p>
          <div class="space-y-2">
            <a href="/support" class="block w-full text-center px-4 py-2 bg-blue-600 text-white font-medium rounded-md hover:bg-blue-700">
              Contact Support
            </a>
            <a href="/kb/billing" class="block w-full text-center px-4 py-2 border border-blue-300 text-blue-700 font-medium rounded-md hover:bg-blue-100">
              View Billing FAQ
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Add interactive functionality
    document.addEventListener('DOMContentLoaded', function() {
      // Handle receipt viewing
      const receiptButtons = document.querySelectorAll('button:contains("View Receipt")');
      receiptButtons.forEach(button => {
        button.addEventListener('click', function(e) {
          const row = e.target.closest('tr');
          const orderId = row.querySelector('td:first-child').textContent;
          window.open(`/payment/success?order_id=${orderId}`, '_blank');
        });
      });

      // Handle status checking
      const statusButtons = document.querySelectorAll('button:contains("Check Status")');
      statusButtons.forEach(button => {
        button.addEventListener('click', async function(e) {
          const row = e.target.closest('tr');
          const orderId = row.querySelector('td:first-child').textContent;
          
          try {
            const response = await fetch(`/api/payments/status?order_id=${orderId}`);
            const data = await response.json();
            
            if (data.success) {
              const status = data.status.transactionStatus;
              if (status === 'settlement') {
                window.location.href = `/payment/success?order_id=${orderId}`;
              } else if (status === 'deny' || status === 'expire') {
                window.location.href = `/payment/error?order_id=${orderId}`;
              } else {
                alert('Payment is still pending. Please check again later.');
              }
            } else {
              alert('Unable to check payment status. Please try again.');
            }
          } catch (error) {
            console.error('Error checking status:', error);
            alert('Unable to check payment status. Please try again.');
          }
        });
      });
    });
  </script>
</Layout>