---
import Layout from '../../layouts/Layout.astro';
import { supabase } from '../../lib/supabase';

// Get user session
const user = await supabase.auth.getUser();

// Get payment history
let transactions = [];
if (user.data.user) {
  try {
    const { data, error } = await supabase
      .from('payment_transactions')
      .select('*')
      .eq('user_id', user.data.user.id)
      .order('created_at', { ascending: false })
      .limit(20);

    if (!error) {
      transactions = data || [];
    }
  } catch (err) {
    console.error('Error fetching payment history:', err);
  }
}
---

<Layout title="Payment History - Maskom Network">
  <div class="max-w-6xl mx-auto p-6">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Payment History</h1>
      <p class="text-gray-600">
        View and manage your payment transactions and receipts.
      </p>
    </div>

    <!-- Summary Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center">
          <div class="p-3 bg-green-100 rounded-full">
            <svg
              class="w-6 h-6 text-green-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm text-gray-500">Successful Payments</p>
            <p class="text-2xl font-bold text-gray-900">
              {transactions.filter(t => t.status === 'success').length}
            </p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center">
          <div class="p-3 bg-yellow-100 rounded-full">
            <svg
              class="w-6 h-6 text-yellow-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm text-gray-500">Pending Payments</p>
            <p class="text-2xl font-bold text-gray-900">
              {transactions.filter(t => t.status === 'pending').length}
            </p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center">
          <div class="p-3 bg-blue-100 rounded-full">
            <svg
              class="w-6 h-6 text-blue-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
              ></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm text-gray-500">Total Spent</p>
            <p class="text-2xl font-bold text-gray-900">
              Rp {
                transactions
                  .filter(t => t.status === 'success')
                  .reduce((sum, t) => sum + Number(t.amount), 0)
                  .toLocaleString('id-ID')
              }
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Transactions Table -->
    <div class="bg-white rounded-lg shadow">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">Recent Transactions</h2>
      </div>

      {
        transactions.length > 0 ? (
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Order ID
                  </th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Date
                  </th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Amount
                  </th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Method
                  </th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Status
                  </th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Actions
                  </th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                {transactions.map(transaction => (
                  <tr key={transaction.id}>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                      {transaction.order_id}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      {new Date(transaction.created_at).toLocaleDateString(
                        'id-ID'
                      )}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                      Rp {Number(transaction.amount).toLocaleString('id-ID')}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      {transaction.payment_method?.name || 'Online Payment'}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <span
                        class={`px-2 inline-flex text-xs leading-5 font-semibold rounded-full ${
                          transaction.status === 'success'
                            ? 'bg-green-100 text-green-800'
                            : transaction.status === 'pending'
                              ? 'bg-yellow-100 text-yellow-800'
                              : transaction.status === 'failed'
                                ? 'bg-red-100 text-red-800'
                                : 'bg-gray-100 text-gray-800'
                        }`}
                      >
                        {transaction.status}
                      </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                      <button
                        onclick={`viewReceipt('${transaction.order_id}')`}
                        class="text-blue-600 hover:text-blue-900 mr-3"
                      >
                        View Receipt
                      </button>
                      {transaction.status === 'pending' && (
                        <button
                          onclick={`checkStatus('${transaction.order_id}')`}
                          class="text-green-600 hover:text-green-900"
                        >
                          Check Status
                        </button>
                      )}
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        ) : (
          <div class="px-6 py-12 text-center">
            <svg
              class="mx-auto h-12 w-12 text-gray-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"
              />
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">
              No transactions
            </h3>
            <p class="mt-1 text-sm text-gray-500">
              You haven't made any payments yet.
            </p>
            <div class="mt-6">
              <a
                href="/billing/payment"
                class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
              >
                Make a Payment
              </a>
            </div>
          </div>
        )
      }
    </div>
  </div>

  <script is:inline>
    function viewReceipt(orderId) {
      window.open(`/payment/success?order_id=${orderId}`, '_blank');
    }

    function checkStatus(orderId) {
      fetch(`/api/payments/status?order_id=${orderId}`)
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            const status = data.status.transactionStatus;
            if (status === 'settlement') {
              window.location.href = `/payment/success?order_id=${orderId}`;
            } else if (status === 'deny' || status === 'expire') {
              window.location.href = `/payment/error?order_id=${orderId}`;
            } else {
              alert('Payment is still pending. Please check again later.');
            }
          } else {
            alert('Unable to check payment status. Please try again.');
          }
        })
        .catch(error => {
          console.error('Error checking status:', error);
          alert('Unable to check payment status. Please try again.');
        });
    }

    // Make functions globally available
    window.viewReceipt = viewReceipt;
    window.checkStatus = checkStatus;
  </script>
</Layout>
