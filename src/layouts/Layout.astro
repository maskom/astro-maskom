---
import { ClientRouter } from "astro:transitions";
import { SEO } from "astro-seo";
import Background from "../components/ui/Background.astro";
import Footer from "../components/ui/Footer.astro";
import Header from "../components/ui/Header.astro";
import "../styles/global.css";

interface Props {
  title: string;
  bgColor?: string;
  primaryBallColor?: string;
  secondaryBallColor?: string;
  gridColor?: string;
  diagonalColor?: string;
  vignetteColor?: string;
}

const {
  title,
  bgColor = "#0F1115",
  primaryBallColor,
  secondaryBallColor,
  gridColor,
  diagonalColor,
  vignetteColor,
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <SEO
      title={title}
      titleTemplate="%s - Maskom Network"
      description="Maskom Network menyediakan layanan internet cepat dan andal untuk bisnis di Indonesia"
      canonical="https://maskom.co.id/"
      noindex={false}
      nofollow={false}
      openGraph={{
        basic: {
          title: title || "Maskom Network",
          type: "website",
          image: "https://maskom.co.id/wp-content/uploads/2023/10/icon-internet.png",
          url: "https://maskom.co.id/",
        },
        optional: {
          locale: "id_ID",
          siteName: "Maskom Network",
          description:
            "Maskom Network adalah penyedia layanan internet terpercaya untuk bisnis di seluruh Indonesia.",
        },
        image: {
          alt: "Maskom Network",
          width: 1200,
          height: 630,
          type: "image/png",
        },
      }}
      twitter={{
        card: "summary_large_image",
        site: "@maskomcoid",
        creator: "@maskomcoid",
        title: title || "Maskom Network",
        description:
          "Maskom Network menyediakan konektivitas internet cepat dan stabil untuk mendukung bisnis Anda.",
        image: "https://maskom.co.id/wp-content/uploads/2023/10/icon-internet.png",
        imageAlt: "Maskom Network",
      }}
      extend={{
        meta: [
          { name: "twitter:image", content: "https://maskom.co.id/wp-content/uploads/2023/10/icon-internet.png" },
          { name: "twitter:title", content: title },
          {
            name: "twitter:description",
            content:
              "Maskom Network menghadirkan solusi internet cepat, stabil, dan aman untuk kebutuhan bisnis Anda di seluruh Indonesia.",
          },
          { name: "theme-color", content: bgColor },
          { name: "apple-mobile-web-app-capable", content: "yes" },
          { name: "apple-mobile-web-app-status-bar-style", content: "black" },
          { name: "author", content: "Maskom Network" },
          {
            name: "keywords",
            content: "maskom, internet, provider, indonesia, jaringan",
          },
        ],
        link: [
          {
            rel: "canonical",
            href: "https://maskom.co.id/",
          },
          { rel: "icon", type: "image/png", href: "/favicon.png" },
          { rel: "apple-touch-icon", href: "/favicon.png" },
        ],
      }}
    />
    <title>{title}</title>
    <ClientRouter />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://api.fontshare.com/v2/css?f[]=cal-sans@400,500,600&display=swap"
      rel="stylesheet"
    />
  </head>
  <body
    class="m-0 min-h-screen relative font-sans"
    style={`background-color: ${bgColor}`}
  >
    <Background
      primaryBallColor={primaryBallColor}
      secondaryBallColor={secondaryBallColor}
      gridColor={gridColor}
      diagonalColor={diagonalColor}
      vignetteColor={vignetteColor}
    />
    <Header />
    <slot />
    <div class="mb-32">
      <Footer />
    </div>
  </body>
</html>

<style is:global>
  :root {
    color-scheme: dark;
  }
</style>
