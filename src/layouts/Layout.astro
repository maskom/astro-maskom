---
import { ClientRouter } from "astro:transitions";
import { SEO } from "astro-seo";
import Background from "../components/ui/Background.astro";
import Footer from "../components/ui/Footer.astro";
import Header from "../components/ui/Header.astro";
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
  image?: string;
  lang?: string;
  bgColor?: string;
  primaryBallColor?: string;
  secondaryBallColor?: string;
  gridColor?: string;
  diagonalColor?: string;
  vignetteColor?: string;
}

const {
  title,
  description,
  image = "/logo-maskom.svg",
  lang = "id",
  bgColor = "#0F1115",
  primaryBallColor,
  secondaryBallColor,
  gridColor,
  diagonalColor,
  vignetteColor,
} = Astro.props;

const pageTitle = title ?? "Maskom Network";
const pageDescription =
  description ??
  "Maskom Network adalah penyedia layanan internet terpercaya di Indonesia.";
const site = Astro.site;
const currentUrl = Astro.url;
const canonicalUrl = site
  ? new URL(currentUrl.pathname, site).toString()
  : `${currentUrl.origin}${currentUrl.pathname}`;
const ogImageMeta = image.endsWith(".svg")
  ? { alt: pageTitle, type: "image/svg+xml" }
  : { alt: pageTitle, width: 1200, height: 630, type: "image/jpeg" };
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <SEO
      title={pageTitle}
      titleTemplate="%s - Maskom Network"
      description={pageDescription}
      canonical={canonicalUrl}
      noindex={false}
      nofollow={false}
      openGraph={{
        basic: {
          title: pageTitle,
          type: "website",
          image,
          url: canonicalUrl,
        },
        optional: {
          locale: "id_ID",
          siteName: "Maskom Network",
          description: pageDescription,
        },
        image: ogImageMeta,
      }}
      twitter={{
        card: "summary_large_image",
        title: pageTitle,
        description: pageDescription,
        image,
        imageAlt: pageTitle,
      }}
      extend={{
        meta: [
          { name: "theme-color", content: bgColor },
          { name: "apple-mobile-web-app-capable", content: "yes" },
          { name: "apple-mobile-web-app-status-bar-style", content: "black" },
          { name: "author", content: "Maskom Network" },
          {
            name: "keywords",
            content: "maskom, internet, jaringan, fiber, wifi",
          },
        ],
        link: [
          { rel: "canonical", href: canonicalUrl },
          { rel: "icon", type: "image/svg+xml", href: "/favicon.svg" },
          { rel: "apple-touch-icon", href: "/favicon.svg" },
        ],
      }}
    />
    <title>{pageTitle}</title>
    <ClientRouter />
    <link rel="sitemap" href="/sitemap-index.xml" />
  </head>
  <body
    class="m-0 min-h-screen relative font-sans"
    style={`background-color: ${bgColor}`}
  >
    <Background
      primaryBallColor={primaryBallColor}
      secondaryBallColor={secondaryBallColor}
      gridColor={gridColor}
      diagonalColor={diagonalColor}
      vignetteColor={vignetteColor}
    />
    <Header />
    <slot />
    <div class="mb-32">
      <Footer />
    </div>
  </body>
</html>

<style is:global>
  :root {
    color-scheme: dark;
  }
</style>
