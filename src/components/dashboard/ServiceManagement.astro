---
// Service Management Component
import { supabase } from '../../lib/supabase.ts';
import { getMainPackages } from '../../data/packages.ts';

const packages = getMainPackages();

// Get user session and service data
const user = await supabase.auth.getUser();
let subscriptions = [];
let currentUsage = null;
let usageHistory = [];

if (user.data.user) {
  try {
    // Get customer subscriptions
    const { data: subs } = await supabase
      .from('customer_subscriptions')
      .select('*')
      .eq('user_id', user.data.user.id)
      .eq('status', 'active')
      .order('created_at', { ascending: false });

    subscriptions = subs || [];

    // Get current usage
    if (subscriptions.length > 0) {
      const { data: usage } = await supabase
        .from('usage_monitoring')
        .select('*')
        .eq('user_id', user.data.user.id)
        .eq('subscription_id', subscriptions[0].id)
        .order('measurement_date', { ascending: false })
        .limit(1);

      currentUsage = usage?.[0] || null;

      // Get usage history (last 30 days)
      const { data: history } = await supabase
        .from('usage_monitoring')
        .select('*')
        .eq('user_id', user.data.user.id)
        .eq('subscription_id', subscriptions[0].id)
        .gte('measurement_date', new Date(Date.now() - 30 * 24 * 60 * 60 * 1000).toISOString().split('T')[0])
        .order('measurement_date', { ascending: true });

      usageHistory = history || [];
    }
  } catch (error) {
    console.error('Error fetching service data:', error);
  }
}

// Calculate usage percentage
const usagePercentage = currentUsage && currentUsage.data_limit 
  ? Math.round((currentUsage.data_used / currentUsage.data_limit) * 100)
  : 0;

// Format data usage
function formatDataUsage(bytes) {
  const gb = bytes / (1024 * 1024 * 1024);
  return gb.toFixed(1);
}
---

<div class="bg-white rounded-lg shadow-lg p-6">
  <div class="flex items-center justify-between mb-6">
    <h2 class="text-xl font-semibold text-gray-900">Service Management</h2>
    <button class="text-blue-600 hover:text-blue-800 text-sm font-medium">
      Manage Services
    </button>
  </div>

  {subscriptions.length > 0 ? (
    <>
      <!-- Current Service -->
      <div class="mb-6">
        <h3 class="text-sm font-medium text-gray-700 mb-3">Current Service</h3>
        <div class="bg-gradient-to-r from-green-500 to-emerald-600 rounded-lg p-4 text-white">
          <div class="flex items-center justify-between mb-3">
            <div>
              <h4 class="text-lg font-semibold">{subscriptions[0].package_name}</h4>
              <p class="text-sm opacity-90">{subscriptions[0].package_speed}</p>
            </div>
            <div class="text-right">
              <p class="text-2xl font-bold">
                Rp {Number(subscriptions[0].package_price).toLocaleString('id-ID')}
              </p>
              <p class="text-sm opacity-75">per month</p>
            </div>
          </div>
          
          <div class="flex items-center justify-between text-sm">
            <span class="opacity-90">Status: Active</span>
            <span class="opacity-90">
              Since: {new Date(subscriptions[0].start_date).toLocaleDateString('id-ID')}
            </span>
          </div>
        </div>
      </div>

      <!-- Data Usage -->
      {currentUsage && (
        <div class="mb-6">
          <h3 class="text-sm font-medium text-gray-700 mb-3">Data Usage</h3>
          <div class="bg-gray-50 rounded-lg p-4">
            <div class="flex items-center justify-between mb-2">
              <span class="text-sm text-gray-600">This Month</span>
              <span class="text-sm font-medium text-gray-900">
                {formatDataUsage(currentUsage.data_used)} GB 
                {currentUsage.data_limit && ` / ${formatDataUsage(currentUsage.data_limit)} GB`}
              </span>
            </div>
            
            {currentUsage.data_limit && (
              <>
                <div class="w-full bg-gray-200 rounded-full h-2 mb-2">
                  <div 
                    class={`h-2 rounded-full service-usage-bar ${
                      usagePercentage > 90 
                        ? 'bg-red-500' 
                        : usagePercentage > 70 
                          ? 'bg-yellow-500' 
                          : 'bg-green-500'
                    }`}
                    style={`--service-usage-width: ${Math.min(usagePercentage, 100)}%;`}
                  ></div>
                </div>
                <div class="flex items-center justify-between text-xs text-gray-500">
                  <span>{usagePercentage}% used</span>
                  <span>
                    {formatDataUsage(Math.max(0, currentUsage.data_limit - currentUsage.data_used))} GB remaining
                  </span>
                </div>
              </>
            )}
          </div>
        </div>
      )}

      <!-- Usage Chart -->
      {usageHistory.length > 0 && (
        <div class="mb-6">
          <h3 class="text-sm font-medium text-gray-700 mb-3">30-Day Usage Trend</h3>
          <div class="bg-gray-50 rounded-lg p-4">
            <div class="h-32 flex items-end justify-between space-x-1">
              {usageHistory.map((day, index) => {
                const maxUsage = Math.max(...usageHistory.map(d => d.data_used));
                const height = maxUsage > 0 ? (day.data_used / maxUsage) * 100 : 0;
                
                return (
                  <div 
                    key={index}
                    class="bg-blue-500 rounded-t hover:bg-blue-600 transition-colors relative group service-chart-bar"
                    style={`--service-chart-height: ${height}%; min-height: 2px;`}
                    title={`${formatDataUsage(day.data_used)} GB on ${new Date(day.measurement_date).toLocaleDateString('id-ID', { month: 'short', day: 'numeric' })}`}
                  >
                    <div class="absolute bottom-full left-1/2 transform -translate-x-1/2 mb-1 px-2 py-1 bg-gray-800 text-white text-xs rounded opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap">
                      {formatDataUsage(day.data_used)} GB
</div>

<style>
  .service-usage-bar {
    width: var(--service-usage-width, 0%);
  }
  
  .service-chart-bar {
    height: var(--service-chart-height, 0%);
  }
</style>
                  </div>
                );
              })}
            </div>
            <div class="flex justify-between text-xs text-gray-500 mt-2">
              <span>{new Date(usageHistory[0]?.measurement_date).toLocaleDateString('id-ID', { month: 'short', day: 'numeric' })}</span>
              <span>{new Date(usageHistory[usageHistory.length - 1]?.measurement_date).toLocaleDateString('id-ID', { month: 'short', day: 'numeric' })}</span>
            </div>
          </div>
        </div>
      )}

      <!-- Service Actions -->
      <div>
        <h3 class="text-sm font-medium text-gray-700 mb-3">Service Actions</h3>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
          <button class="flex items-center justify-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v2H7a1 1 0 100 2h2v2a1 1 0 102 0v-2h2a1 1 0 100-2h-2V7z" clip-rule="evenodd" />
            </svg>
            Upgrade Package
          </button>
          <button class="flex items-center justify-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z" clip-rule="evenodd" />
            </svg>
            Change Plan
          </button>
          <button class="flex items-center justify-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path d="M13 7H7v6h6V7z" />
              <path fill-rule="evenodd" d="M7 2a1 1 0 012 0v1h2V2a1 1 0 112 0v1h2a2 2 0 012 2v2h1a1 1 0 110 2h-1v2h1a1 1 0 110 2h-1v2a2 2 0 01-2 2h-2v1a1 1 0 11-2 0v-1H9v1a1 1 0 11-2 0v-1H5a2 2 0 01-2-2v-2H2a1 1 0 110-2h1V9H2a1 1 0 010-2h1V5a2 2 0 012-2h2V2z" clip-rule="evenodd" />
            </svg>
            Add-ons
          </button>
          <button class="flex items-center justify-center px-4 py-2 border border-red-300 rounded-md shadow-sm text-sm font-medium text-red-700 bg-white hover:bg-red-50">
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
            </svg>
            Suspend Service
          </button>
        </div>
      </div>
    </>
  ) : (
    <!-- No Active Services -->
    <div class="text-center py-8">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd" />
      </svg>
      <h3 class="mt-2 text-lg font-medium text-gray-900">No Active Services</h3>
      <p class="mt-1 text-sm text-gray-500">
        Get started by choosing a service package that fits your needs.
      </p>
      <div class="mt-6">
        <a 
          href="/layanan" 
          class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700"
        >
          Browse Packages
        </a>
      </div>
    </div>
  )}
</div>