---
interface LoyaltyStatus {
  id: string;
  current_tier: {
    id: string;
    name: string;
    display_name: string;
    color: string;
    icon: string;
    benefits: Record<string, any>;
    points_multiplier: number;
  };
  current_points_balance: number;
  total_points_earned: number;
  total_points_redeemed: number;
  total_months_tenure: number;
  total_spent: number;
  referral_count: number;
}

interface LoyaltyOverview {
  loyalty_status: LoyaltyStatus;
  current_tier: any;
  next_tier: any;
  points_to_next_tier: number;
  tier_progress: {
    current_points: number;
    current_tier_min: number;
    next_tier_min: number;
  };
  recent_transactions: any[];
  active_redemptions: any[];
  referral_summary: {
    total_referrals: number;
    completed_referrals: number;
    pending_referrals: number;
  };
}

interface Reward {
  id: string;
  name: string;
  description: string;
  category: string;
  points_cost: number;
  reward_type: string;
  image_url?: string;
  is_limited: boolean;
  quantity_available?: number;
  quantity_claimed: number;
}

interface Referral {
  id: string;
  referred_email: string;
  referral_code: string;
  referral_status: string;
  points_awarded: number;
  invitation_sent_at: string;
  registered_at?: string;
  completed_at?: string;
}

export interface Props {
  loyaltyData: LoyaltyOverview;
  rewards: Reward[];
  referrals: Referral[];
}

const { loyaltyData, rewards, referrals } = Astro.props;

function getTierProgressPercentage(progress: any): number {
  if (!progress) return 0;
  const range = progress.next_tier_min - progress.current_tier_min;
  const current = progress.current_points - progress.current_tier_min;
  return Math.min(100, Math.max(0, (current / range) * 100));
}

function formatPoints(points: number): string {
  return new Intl.NumberFormat('id-ID').format(points);
}

function formatCurrency(amount: number): string {
  return new Intl.NumberFormat('id-ID', {
    style: 'currency',
    currency: 'IDR',
    minimumFractionDigits: 0,
  }).format(amount);
}

function formatDate(dateString: string): string {
  return new Date(dateString).toLocaleDateString('id-ID', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
  });
}

function getStatusColor(status: string): string {
  const colors = {
    pending: 'bg-yellow-100 text-yellow-800',
    approved: 'bg-blue-100 text-blue-800',
    fulfilled: 'bg-green-100 text-green-800',
    invited: 'bg-gray-100 text-gray-800',
    registered: 'bg-blue-100 text-blue-800',
    activated: 'bg-purple-100 text-purple-800',
    completed: 'bg-green-100 text-green-800',
  };
  return colors[status as keyof typeof colors] || 'bg-gray-100 text-gray-800';
}
---

<div class="bg-white rounded-lg shadow-lg p-6">
  <div class="flex items-center justify-between mb-6">
    <h2 class="text-2xl font-bold text-gray-800">Loyalty & Rewards</h2>
    <div class="flex items-center space-x-2">
      <svg class="w-6 h-6 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
      </svg>
      <span class="text-lg font-semibold text-gray-700">
        {formatPoints(loyaltyData.loyalty_status?.current_points_balance || 0)} Points
      </span>
    </div>
  </div>

  <!-- Current Tier Status -->
  <div class="mb-8">
    <div class="flex items-center justify-between mb-4">
      <div>
        <h3 class="text-lg font-semibold text-gray-800">Current Tier</h3>
        <div class="flex items-center space-x-3 mt-2">
          <div 
            class="w-12 h-12 rounded-full flex items-center justify-center"
            style={`background-color: ${loyaltyData.current_tier?.color || '#6B7280'}20`}
          >
            <svg class="w-6 h-6" style={`color: ${loyaltyData.current_tier?.color || '#6B7280'}`} fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
          </div>
          <div>
            <p class="text-xl font-bold text-gray-800">{loyaltyData.current_tier?.display_name || 'Bronze'}</p>
            <p class="text-sm text-gray-600">{loyaltyData.current_tier?.description || 'Starting tier'}</p>
          </div>
        </div>
      </div>
      <div class="text-right">
        <p class="text-sm text-gray-600">Points Multiplier</p>
        <p class="text-2xl font-bold text-gray-800">{loyaltyData.current_tier?.points_multiplier || 1.0}x</p>
      </div>
    </div>

    <!-- Tier Benefits -->
    <div class="bg-gray-50 rounded-lg p-4">
      <h4 class="font-semibold text-gray-800 mb-2">Tier Benefits</h4>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-2">
        {
          Object.entries(loyaltyData.current_tier?.benefits || {}).map(([key, value]) => (
            <div class="flex items-center space-x-2">
              <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              <span class="text-sm text-gray-700">
                {key.replace(/_/g, ' ').replace(/\b\w/g, l => l.toUpperCase())}: {typeof value === 'boolean' ? (value ? 'Yes' : 'No') : value}
              </span>
            </div>
          ))
        }
      </div>
    </div>
  </div>

  <!-- Progress to Next Tier -->
  {loyaltyData.next_tier && (
    <div class="mb-8">
      <div class="flex items-center justify-between mb-2">
        <h3 class="text-lg font-semibold text-gray-800">Progress to {loyaltyData.next_tier.display_name}</h3>
        <span class="text-sm text-gray-600">
          {formatPoints(loyaltyData.points_to_next_tier)} points to go
        </span>
      </div>
      <div class="w-full bg-gray-200 rounded-full h-3">
        <div 
          class="bg-gradient-to-r from-blue-500 to-indigo-600 h-3 rounded-full transition-all duration-300"
          style={`width: ${getTierProgressPercentage(loyaltyData.tier_progress)}%`}
        ></div>
      </div>
      <div class="flex justify-between mt-2">
        <span class="text-xs text-gray-600">
          {formatPoints(loyaltyData.tier_progress?.current_points || 0)} points
        </span>
        <span class="text-xs text-gray-600">
          {formatPoints(loyaltyData.tier_progress?.next_tier_min || 0)} points
        </span>
      </div>
    </div>
  )}

  <!-- Stats Grid -->
  <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
    <div class="bg-blue-50 rounded-lg p-4 text-center">
      <p class="text-2xl font-bold text-blue-600">{formatPoints(loyaltyData.loyalty_status?.total_points_earned || 0)}</p>
      <p class="text-sm text-gray-600">Points Earned</p>
    </div>
    <div class="bg-green-50 rounded-lg p-4 text-center">
      <p class="text-2xl font-bold text-green-600">{formatPoints(loyaltyData.loyalty_status?.total_points_redeemed || 0)}</p>
      <p class="text-sm text-gray-600">Points Redeemed</p>
    </div>
    <div class="bg-purple-50 rounded-lg p-4 text-center">
      <p class="text-2xl font-bold text-purple-600">{loyaltyData.loyalty_status?.total_months_tenure || 0}</p>
      <p class="text-sm text-gray-600">Months Tenure</p>
    </div>
    <div class="bg-orange-50 rounded-lg p-4 text-center">
      <p class="text-2xl font-bold text-orange-600">{loyaltyData.referral_summary?.total_referrals || 0}</p>
      <p class="text-sm text-gray-600">Referrals</p>
    </div>
  </div>

  <!-- Available Rewards -->
  <div class="mb-8">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-lg font-semibold text-gray-800">Available Rewards</h3>
      <button class="text-blue-600 hover:text-blue-700 text-sm font-medium">View All</button>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      {rewards.slice(0, 6).map((reward) => (
        <div class="border rounded-lg p-4 hover:shadow-md transition-shadow">
          <div class="flex items-start justify-between mb-2">
            <h4 class="font-semibold text-gray-800">{reward.name}</h4>
            {reward.is_limited && (
              <span class="bg-red-100 text-red-800 text-xs px-2 py-1 rounded">
                Limited
              </span>
            )}
          </div>
          <p class="text-sm text-gray-600 mb-3">{reward.description}</p>
          <div class="flex items-center justify-between">
            <span class="text-lg font-bold text-blue-600">{formatPoints(reward.points_cost)} pts</span>
            <button 
              class="bg-blue-600 text-white px-3 py-1 rounded text-sm hover:bg-blue-700 transition-colors"
              onclick="redeemReward('{reward.id}', {reward.points_cost})"
            >
              Redeem
            </button>
          </div>
          {reward.is_limited && reward.quantity_available && (
            <p class="text-xs text-gray-500 mt-2">
              {reward.quantity_available - reward.quantity_claimed} left
            </p>
          )}
        </div>
      ))}
    </div>
  </div>

  <!-- Recent Activity -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Recent Transactions -->
    <div>
      <h3 class="text-lg font-semibold text-gray-800 mb-4">Recent Activity</h3>
      <div class="space-y-3">
        {loyaltyData.recent_transactions.slice(0, 5).map((transaction) => (
          <div class="flex items-center justify-between py-2 border-b border-gray-100">
            <div class="flex items-center space-x-3">
              <div class={`w-8 h-8 rounded-full flex items-center justify-center ${
                transaction.points_amount > 0 ? 'bg-green-100' : 'bg-red-100'
              }`}>
                <svg class={`w-4 h-4 ${transaction.points_amount > 0 ? 'text-green-600' : 'text-red-600'}`} fill="currentColor" viewBox="0 0 20 20">
                  {transaction.points_amount > 0 ? (
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-8.293l-3-3a1 1 0 00-1.414 1.414L10.586 9.5H7a1 1 0 100 2h3.586l-1.293 1.293a1 1 0 101.414 1.414l3-3a1 1 0 000-1.414z" clip-rule="evenodd"/>
                  ) : (
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                  )}
                </svg>
              </div>
              <div>
                <p class="text-sm font-medium text-gray-800">{transaction.description}</p>
                <p class="text-xs text-gray-500">{formatDate(transaction.created_at)}</p>
              </div>
            </div>
            <span class={`font-semibold ${
              transaction.points_amount > 0 ? 'text-green-600' : 'text-red-600'
            }`}>
              {transaction.points_amount > 0 ? '+' : ''}{formatPoints(transaction.points_amount)}
            </span>
          </div>
        ))}
      </div>
    </div>

    <!-- Referral Activity -->
    <div>
      <h3 class="text-lg font-semibold text-gray-800 mb-4">Referral Activity</h3>
      <div class="space-y-3">
        {referrals.slice(0, 5).map((referral) => (
          <div class="flex items-center justify-between py-2 border-b border-gray-100">
            <div class="flex items-center space-x-3">
              <div class="w-8 h-8 rounded-full bg-blue-100 flex items-center justify-center">
                <svg class="w-4 h-4 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"/>
                </svg>
              </div>
              <div>
                <p class="text-sm font-medium text-gray-800">{referral.referred_email}</p>
                <p class="text-xs text-gray-500">Code: {referral.referral_code}</p>
              </div>
            </div>
            <div class="text-right">
              <span class={`inline-flex px-2 py-1 text-xs font-medium rounded-full ${getStatusColor(referral.referral_status)}`}>
                {referral.referral_status}
              </span>
              {referral.points_awarded > 0 && (
                <p class="text-xs text-green-600 mt-1">+{formatPoints(referral.points_awarded)}</p>
              )}
            </div>
          </div>
        ))}
      </div>
      {referrals.length === 0 && (
        <div class="text-center py-8 text-gray-500">
          <svg class="w-12 h-12 mx-auto mb-3 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"/>
          </svg>
          <p class="text-sm">No referrals yet</p>
          <p class="text-xs mt-1">Start referring friends to earn rewards!</p>
        </div>
      )}
    </div>
  </div>
</div>

<script>
  async function redeemReward(rewardId, pointsCost) {
    if (!confirm(`Are you sure you want to redeem this reward for ${pointsCost.toLocaleString()} points?`)) {
      return;
    }

    try {
      const response = await fetch('/api/loyalty', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          action: 'redeem',
          rewardId,
          pointsUsed: pointsCost,
        }),
      });

      const result = await response.json();

      if (result.success) {
        alert('Reward redeemed successfully!');
        window.location.reload();
      } else {
        alert('Error: ' + (result.error || 'Failed to redeem reward'));
      }
    } catch (error) {
      alert('Error: Failed to redeem reward');
    }
  }
</script>