---
interface BandwidthData {
  usage_date: string;
  download_bytes: number;
  upload_bytes: number;
  total_bytes: number;
}

interface DataCap {
  id: string;
  package_id: string;
  monthly_cap_gb: number;
  current_usage_gb: number;
  billing_cycle_start: string;
  notification_thresholds: number[];
}

interface BandwidthChartProps {
  data: BandwidthData[];
  dataCap: DataCap | null;
}

const { data, dataCap } = Astro.props;

// Format bytes to GB
function formatBytesToGB(bytes: number): string {
  return (bytes / (1024 * 1024 * 1024)).toFixed(2);
}

// Format date for display
function formatDate(dateString: string): string {
  const date = new Date(dateString);
  return date.toLocaleDateString('id-ID', { day: 'numeric', month: 'short' });
}

// Calculate usage percentage
function getUsagePercentage(): number {
  if (!dataCap) return 0;
  return Math.round((dataCap.current_usage_gb / dataCap.monthly_cap_gb) * 100);
}

// Get remaining data
function getRemainingGB(): number {
  if (!dataCap) return 0;
  return Math.max(0, dataCap.monthly_cap_gb - dataCap.current_usage_gb);
}

// Get chart data points
function getChartData() {
  return data.map(day => ({
    date: formatDate(day.usage_date),
    download: parseFloat(formatBytesToGB(day.download_bytes)),
    upload: parseFloat(formatBytesToGB(day.upload_bytes)),
    total: parseFloat(formatBytesToGB(day.total_bytes)),
  }));
}

const chartData = getChartData();
const usagePercentage = getUsagePercentage();
const remainingGB = getRemainingGB();
const maxUsage = Math.max(...chartData.map(d => d.total), 1);
---

<div class="bg-white rounded-lg shadow-lg p-6 mb-6">
  <div class="flex justify-between items-center mb-6">
    <h2 class="text-xl font-semibold text-gray-800">Penggunaan Bandwidth</h2>
    <div class="flex items-center space-x-4">
      <div class="text-sm text-gray-600">
        <span class="font-medium">Kuota Bulanan:</span>
        {dataCap ? `${dataCap.monthly_cap_gb} GB` : 'Tidak ada data'}
      </div>
    </div>
  </div>

  <!-- Usage Overview Cards -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
    <div class="bg-blue-50 rounded-lg p-4">
      <div class="text-sm text-blue-600 font-medium">Total Terpakai</div>
      <div class="text-2xl font-bold text-blue-800">
        {dataCap ? `${dataCap.current_usage_gb.toFixed(2)} GB` : '0 GB'}
      </div>
      <div class="text-xs text-blue-600 mt-1">
        {usagePercentage}% dari kuota
      </div>
    </div>

    <div class="bg-green-50 rounded-lg p-4">
      <div class="text-sm text-green-600 font-medium">Sisa Kuota</div>
      <div class="text-2xl font-bold text-green-800">
        {remainingGB.toFixed(2)} GB
      </div>
      <div class="text-xs text-green-600 mt-1">
        {dataCap ? `${100 - usagePercentage}% tersisa` : 'Tidak ada data'}
      </div>
    </div>

    <div class="bg-purple-50 rounded-lg p-4">
      <div class="text-sm text-purple-600 font-medium">Rata-rata/Hari</div>
      <div class="text-2xl font-bold text-purple-800">
        {
          chartData.length > 0
            ? (
                chartData.reduce((sum, d) => sum + d.total, 0) /
                chartData.length
              ).toFixed(2)
            : '0'
        } GB
      </div>
      <div class="text-xs text-purple-600 mt-1">30 hari terakhir</div>
    </div>
  </div>

  <!-- Progress Bar -->
  {
    dataCap && (
      <div class="mb-6">
        <div class="flex justify-between items-center mb-2">
          <span class="text-sm font-medium text-gray-700">
            Progress Kuota Bulanan
          </span>
          <span class="text-sm text-gray-600">{usagePercentage}%</span>
        </div>
        <div class="w-full bg-gray-200 rounded-full h-3">
          <div
            class={`h-3 rounded-full transition-all duration-300 ${
              usagePercentage >= 90
                ? 'bg-red-500'
                : usagePercentage >= 80
                  ? 'bg-yellow-500'
                  : 'bg-green-500'
            }`}
            style={`width: ${Math.min(usagePercentage, 100)}%`}
          />
        </div>
        {usagePercentage >= 80 && (
          <div class="mt-2 text-sm text-amber-600">
            {usagePercentage >= 90
              ? '⚠️ Kuota hampir habis!'
              : '⚡ Kuota menipis, pertimbangkan penggunaan lebih hemat'}
          </div>
        )}
      </div>
    )
  }

  <!-- Chart -->
  <div class="bg-gray-50 rounded-lg p-4">
    <h3 class="text-sm font-medium text-gray-700 mb-4">
      Grafik Penggunaan 30 Hari Terakhir
    </h3>
    <div class="h-64 relative">
      {
        chartData.length > 0 ? (
          <div class="h-full flex items-end space-x-1">
            {chartData.map((point, index) => (
              <div
                key={index}
                class="flex-1 bg-blue-500 hover:bg-blue-600 transition-colors relative group"
                style={`height: ${(point.total / maxUsage) * 100}%`}
                title={`${point.date}: ${point.total.toFixed(2)} GB`}
              >
                <div class="absolute bottom-full left-1/2 transform -translate-x-1/2 mb-2 px-2 py-1 bg-gray-800 text-white text-xs rounded opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap">
                  <div>{point.date}</div>
                  <div>Download: {point.download.toFixed(2)} GB</div>
                  <div>Upload: {point.upload.toFixed(2)} GB</div>
                  <div>Total: {point.total.toFixed(2)} GB</div>
                </div>
              </div>
            ))}
          </div>
        ) : (
          <div class="h-full flex items-center justify-center text-gray-500">
            <div class="text-center">
              <svg
                class="w-12 h-12 mx-auto mb-2 text-gray-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
                />
              </svg>
              <p>Belum ada data penggunaan</p>
            </div>
          </div>
        )
      }
    </div>

    <!-- Legend -->
    <div class="flex justify-center space-x-6 mt-4">
      <div class="flex items-center">
        <div class="w-3 h-3 bg-blue-500 rounded-full mr-2"></div>
        <span class="text-xs text-gray-600">Total Penggunaan</span>
      </div>
    </div>
  </div>
</div>
