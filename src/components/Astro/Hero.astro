---
import { home } from '../../data/site';
---

<section class="bg-gradient-to-br from-indigo-600 via-sky-600 to-blue-500 text-white">
  <div class="max-w-6xl mx-auto px-4 pt-32 pb-24 text-center">
    <p class="text-indigo-200 mb-2">{home.subtitle}</p>
    <h1 class="text-4xl md:text-6xl font-bold mb-4">{home.title}</h1>
    <p class="text-lg md:text-xl text-indigo-100 max-w-2xl mx-auto">
      {home.description}
    </p>

    <div class="mt-10 grid grid-cols-2 sm:grid-cols-3 gap-6">
      {home.stats.map(stat => (
        <div class="text-center">
          <p class="text-3xl font-bold">{stat.value}</p>
          <p class="text-sm text-indigo-100">{stat.label}</p>
        </div>
      ))}
    </div>

    <div class="mt-12 grid grid-cols-1 sm:grid-cols-3 gap-6">
      {home.features.map(feature => (
        <div class="bg-white/10 backdrop-blur rounded-xl p-6">
          <h3 class="text-lg font-semibold mb-2">{feature.title}</h3>
          <p class="text-sm text-indigo-100">{feature.description}</p>
        </div>
      ))}
    </div>

    <div class="mt-12 flex flex-col sm:flex-row justify-center gap-4">
      <a
        href="https://wa.me/6283867803521"
        target="_blank"
        rel="noopener noreferrer"
        class="px-6 py-3 rounded-lg bg-green-600 text-white font-medium hover:bg-green-700 transition"
      >
        Chat WhatsApp
      </a>
      <button
        onclick="document.getElementById('paket').scrollIntoView({ behavior: 'smooth' })"
        class="px-6 py-3 rounded-lg border border-white/50 hover:bg-white/10 transition"
      >
        Lihat Paket
      </button>
    </div>
  </div>
</section>