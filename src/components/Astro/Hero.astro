---
import { home } from '../../data/site';
---

<section class="relative overflow-hidden pt-36 pb-24">
  <div class="hero-orb hero-orb--primary"></div>
  <div class="hero-orb hero-orb--secondary"></div>
  <div class="hero-grid"></div>

  <div class="relative mx-auto max-w-6xl px-4">
    <div class="mx-auto max-w-3xl text-center space-y-6">
      <span class="inline-flex items-center justify-center rounded-full border border-white/10 bg-white/5 px-4 py-1 text-xs font-semibold uppercase tracking-[0.3em] text-indigo-200/80">
        {home.subtitle}
      </span>
      <h1 class="font-cal text-4xl sm:text-5xl md:text-6xl font-semibold leading-tight" style="text-wrap: balance;">
        <span class="bg-gradient-to-r from-indigo-300 via-sky-200 to-cyan-300 bg-clip-text text-transparent">
          {home.title}
        </span>
        <span class="block text-white/80">Solusi internet fiber dedicated untuk pengalaman digital tanpa kompromi.</span>
      </h1>
      <p class="text-base md:text-lg text-white/70">
        {home.description}
      </p>
      <div class="flex flex-col gap-4 sm:flex-row sm:justify-center">
        <a
          href="https://wa.me/6283867803521"
          target="_blank"
          rel="noopener noreferrer"
          class="cta-button"
        >
          Chat WhatsApp
        </a>
        <button
          class="cta-ghost"
          type="button"
          onclick="document.getElementById('paket')?.scrollIntoView({ behavior: 'smooth' })"
        >
          Lihat Paket Layanan
        </button>
      </div>
    </div>

    <div class="mt-16 grid gap-6 sm:grid-cols-3">
      {home.stats.map((stat) => (
        <div class="stat-card">
          <p class="text-3xl font-semibold text-white">{stat.value}</p>
          <p class="text-sm uppercase tracking-wide text-white/60">{stat.label}</p>
        </div>
      ))}
    </div>

    <div class="mt-16 grid gap-6 md:grid-cols-3">
      {home.features.map((feature) => (
        <div class="feature-card">
          <h3 class="text-lg font-semibold text-white">{feature.title}</h3>
          <p class="mt-2 text-sm text-white/70">{feature.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .hero-orb {
    position: absolute;
    border-radius: 9999px;
    filter: blur(120px);
    opacity: 0.7;
    mix-blend-mode: screen;
    pointer-events: none;
  }

  .hero-orb--primary {
    width: 520px;
    height: 520px;
    top: -140px;
    left: 50%;
    transform: translateX(-40%);
    background: radial-gradient(circle, rgba(129,140,248,0.6), rgba(56,189,248,0.1));
  }

  .hero-orb--secondary {
    width: 460px;
    height: 460px;
    bottom: -160px;
    right: -120px;
    background: radial-gradient(circle, rgba(14,165,233,0.6), rgba(14,165,233,0));
  }

  .hero-grid {
    position: absolute;
    inset: 0;
    background-image: radial-gradient(circle at top, rgba(56,189,248,0.12), transparent 55%),
      linear-gradient(rgba(148,163,184,0.08) 1px, transparent 0),
      linear-gradient(90deg, rgba(148,163,184,0.08) 1px, transparent 0);
    background-size: 100% 100%, 48px 48px, 48px 48px;
    mask-image: radial-gradient(circle at center, rgba(0,0,0,0.9), rgba(0,0,0,0));
    opacity: 0.55;
    pointer-events: none;
  }

  .cta-button {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    border-radius: 9999px;
    padding: 0.875rem 1.75rem;
    font-weight: 600;
    color: #0f1115;
    background: linear-gradient(135deg, #a855f7, #60a5fa, #22d3ee);
    box-shadow: 0 20px 45px -20px rgba(56, 189, 248, 0.7);
    transition: transform 0.4s ease, box-shadow 0.4s ease;
  }

  .cta-button:hover {
    transform: translateY(-3px) scale(1.01);
    box-shadow: 0 30px 60px -25px rgba(129, 140, 248, 0.75);
  }

  .cta-ghost {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: 9999px;
    padding: 0.875rem 1.75rem;
    font-weight: 600;
    color: rgba(255,255,255,0.8);
    border: 1px solid rgba(148,163,184,0.25);
    background: rgba(15,17,21,0.55);
    transition: border-color 0.35s ease, color 0.35s ease, transform 0.35s ease, box-shadow 0.35s ease;
  }

  .cta-ghost:hover {
    color: #fff;
    border-color: rgba(59,130,246,0.6);
    transform: translateY(-3px);
    box-shadow: 0 18px 40px -25px rgba(56,189,248,0.55);
  }

  .stat-card {
    position: relative;
    border-radius: 1.5rem;
    padding: 1.75rem;
    background: linear-gradient(155deg, rgba(15,23,42,0.65), rgba(15,23,42,0.35));
    border: 1px solid rgba(148,163,184,0.18);
    box-shadow: inset 0 1px 0 rgba(255,255,255,0.04);
    transition: transform 0.4s ease, border-color 0.4s ease, box-shadow 0.4s ease;
    overflow: hidden;
  }

  .stat-card::before {
    content: "";
    position: absolute;
    inset: -2px;
    border-radius: inherit;
    background: radial-gradient(circle at top, rgba(59,130,246,0.35), transparent 60%);
    opacity: 0;
    transition: opacity 0.4s ease, filter 0.4s ease;
    z-index: 0;
    filter: blur(0);
  }

  .stat-card:hover {
    transform: translateY(-6px);
    border-color: rgba(59,130,246,0.45);
    box-shadow: 0 25px 60px -30px rgba(56,189,248,0.55);
  }

  .stat-card:hover::before {
    opacity: 1;
    filter: blur(25px);
  }

  .stat-card > * {
    position: relative;
    z-index: 1;
  }

  .feature-card {
    position: relative;
    border-radius: 1.75rem;
    padding: 2rem;
    border: 1px solid rgba(148,163,184,0.15);
    background: linear-gradient(160deg, rgba(15,17,21,0.85), rgba(15,23,42,0.55));
    overflow: hidden;
    transition: transform 0.45s cubic-bezier(0.2, 0.8, 0.2, 1), border-color 0.45s ease, box-shadow 0.45s ease;
  }

  .feature-card::before {
    content: "";
    position: absolute;
    inset: -2px;
    border-radius: inherit;
    background: conic-gradient(from 180deg at 50% 50%, rgba(94,234,212,0.12), rgba(14,165,233,0.22), rgba(129,140,248,0.18), rgba(14,165,233,0.22), rgba(94,234,212,0.12));
    opacity: 0;
    transition: opacity 0.45s ease;
    z-index: 0;
  }

  .feature-card::after {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: inherit;
    background: radial-gradient(circle at top, rgba(59,130,246,0.18), transparent 60%);
    opacity: 0;
    transition: opacity 0.45s ease, filter 0.45s ease;
    z-index: 0;
  }

  .feature-card:hover {
    transform: translateY(-8px);
    border-color: rgba(165,180,252,0.5);
    box-shadow: 0 35px 70px -30px rgba(99,102,241,0.6);
  }

  .feature-card:hover::before,
  .feature-card:hover::after {
    opacity: 1;
  }

  .feature-card:hover::after {
    filter: blur(12px);
  }

  .feature-card > * {
    position: relative;
    z-index: 1;
  }

  @media (max-width: 640px) {
    .hero-orb--primary {
      width: 320px;
      height: 320px;
      top: -180px;
      transform: translateX(-50%);
    }

    .hero-orb--secondary {
      width: 320px;
      height: 320px;
      right: -160px;
    }
  }
</style>
