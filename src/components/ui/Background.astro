---
interface Props {
  primaryBallColor?: string;
  secondaryBallColor?: string;
  gridColor?: string;
  diagonalColor?: string;
  vignetteColor?: string;
}

const {
  primaryBallColor = '#F97316',
  secondaryBallColor = '#A855F7',
  gridColor = 'rgba(255,255,255,0.05)',
  diagonalColor = 'rgba(255,255,255,0.1)',
  vignetteColor = 'rgba(0,0,0,0.4)',
} = Astro.props;
---

<div class="fixed inset-0 -z-50">
  <!-- Main gradient orbs -->
  <div
    class="absolute top-1/4 left-1/4 w-64 h-64 bg-purple-500/30 rounded-full blur-3xl animate-float"
  >
  </div>
  <div
    class="absolute bottom-1/4 right-1/4 w-64 h-64 bg-blue-500/30 rounded-full blur-3xl animate-float animation-delay-1000"
  >
  </div>

  <!-- Reduced decorative orbs for better performance -->
  <div
    class="absolute top-1/3 right-1/3 w-32 h-32 bg-orange-500/20 rounded-full blur-xl animate-float animation-delay-500"
  >
  </div>
  <div
    class="absolute bottom-1/3 left-1/3 w-48 h-48 bg-pink-500/20 rounded-full blur-xl animate-float animation-delay-1500"
  >
  </div>

  <!-- Simplified grid pattern -->
  <div
    class="absolute inset-0 bg-[length:64px_64px] opacity-20 grid-pattern"
  >
  </div>

  <!-- Diagonal lines -->
  <div
    class="absolute inset-0 opacity-20 diagonal-pattern"
  >
  </div>

  <!-- Vignette effect -->
  <div
    class="absolute inset-0 pointer-events-none vignette-effect"
  >
  </div>
  <div
    class="absolute inset-0 bg-gradient-to-r from-black/20 via-transparent to-black/20"
  >
  </div>
  <div
    class="absolute inset-0 bg-gradient-to-b from-black/20 via-transparent to-black/20"
  >
  </div>

  <!-- Bottom violet glow -->
  <div
    class="absolute bottom-0 left-1/2 -translate-x-1/2 w-[200px] h-[200px] rounded-full blur-[80px] opacity-30 secondary-glow"
  >
  </div>

  <!-- Small accent glow -->
  <div
    class="absolute bottom-[20%] right-[20%] w-[100px] h-[100px] rounded-full blur-[60px] opacity-20 primary-glow"
  >
  </div>
</div>

<style>
  @keyframes float {
    0%,
    100% {
      transform: translate(0, 0);
    }
    50% {
      transform: translate(-5px, 5px);
    }
  }

  .animate-float {
    animation: float 12s ease-in-out infinite;
    will-change: transform;
  }

  .animate-pulse {
    animation: pulse 6s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    will-change: opacity;
  }

  @keyframes pulse {
    0%,
    100% {
      opacity: 0.2;
    }
    50% {
      opacity: 0.4;
    }
  }

  .animation-delay-500 {
    animation-delay: 500ms;
  }

  .animation-delay-1000 {
    animation-delay: 1000ms;
  }

  .animation-delay-1500 {
    animation-delay: 1500ms;
  }

  .grid-pattern {
    background-image: linear-gradient(var(--grid-color, rgba(255,255,255,0.05)) 1px, transparent 1px),
                      linear-gradient(to right, var(--grid-color, rgba(255,255,255,0.05)) 1px, transparent 1px);
  }

  .diagonal-pattern {
    background-image: repeating-linear-gradient(45deg, var(--diagonal-color, rgba(255,255,255,0.1)) 0, var(--diagonal-color, rgba(255,255,255,0.1)) 1px, transparent 0, transparent 48%);
    background-size: 48px 48px;
  }

  .vignette-effect {
    background: radial-gradient(circle at center, transparent 0%, var(--vignette-color, rgba(0,0,0,0.4)) 100%);
  }

  .primary-glow {
    background-color: var(--primary-ball-color, #F97316);
  }

  .secondary-glow {
    background-color: var(--secondary-ball-color, #A855F7);
  }
</style>
