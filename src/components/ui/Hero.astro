---
import { home } from '../../data/site';
import { contactInfo } from '../../data/packages';
---

<main
  class="relative min-h-screen flex items-center justify-center overflow-hidden"
>
  <!-- Hero Content -->
  <div class="relative z-10 px-4 pt-32 pb-16">
    <div class="max-w-5xl mx-auto text-center">
      <!-- Subtitle -->
      <p class="text-purple-400 font-medium mb-4">
        {home.subtitle}
      </p>

      <!-- Title with gradient -->
      <h1
        class="text-5xl md:text-7xl font-bold font-cal bg-gradient-to-r from-orange-500 via-purple-500 to-blue-500 bg-clip-text text-transparent whitespace-pre-line"
      >
        {home.title}
      </h1>

      <!-- Description -->
      <p class="mt-8 text-xl text-gray-400 max-w-2xl mx-auto font-sans">
        {home.description}
      </p>

      <!-- Stats -->
      <div
        class="grid grid-cols-2 md:grid-cols-3 gap-8 max-w-3xl mx-auto mt-16"
      >
        {
          home.stats.map(stat => (
            <div class="text-center">
              <div class="text-4xl font-bold font-cal bg-gradient-to-r from-purple-400 to-blue-400 bg-clip-text text-transparent">
                {stat.value}
              </div>
              <div class="text-sm text-gray-400 mt-1">{stat.label}</div>
            </div>
          ))
        }
      </div>

      <!-- Features -->
      <div
        class="cursor-default grid md:grid-cols-3 gap-8 max-w-4xl mx-auto mt-16"
      >
        {
          home.features.map(feature => (
            <div class="bg-gray-900/50 rounded-2xl p-6 border border-gray-800/50 hover:border-purple-500/50 transition-colors duration-300">
              <h3 class="text-xl font-bold text-white mb-2">{feature.title}</h3>
              <p class="text-gray-400 text-sm">{feature.description}</p>
            </div>
          ))
        }
      </div>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 mt-10">
        <a
          href={contactInfo.whatsapp}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center justify-center px-6 py-3 text-base font-medium rounded-xl text-white bg-green-600 hover:bg-green-700 transition-all duration-300"
        >
          Chat WhatsApp
        </a>
        <button
          onclick="document.getElementById('paket').scrollIntoView({ behavior: 'smooth' })"
          class="inline-flex items-center justify-center px-6 py-3 border-2 border-purple-500/50 text-base font-medium rounded-xl text-white hover:bg-purple-500/10 transition-all duration-300"
        >
          Lihat Paket
        </button>
      </div>
    </div>
  </div>
</main>

<style>
  @keyframes float {
    0%,
    100% {
      transform: translate(0, 0);
    }
    50% {
      transform: translate(-5px, 5px);
    }
  }

  .animate-float {
    animation: float 12s ease-in-out infinite;
    will-change: transform;
  }
</style>
