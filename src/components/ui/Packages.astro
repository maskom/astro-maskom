---
import { packages } from '../../data/packages';
---

<section id="paket" class="relative py-24">
  <div class="packages-grid"></div>
  <div class="packages-glow"></div>

  <div class="relative mx-auto max-w-6xl px-4">
    <div class="text-center space-y-4">
      <span class="inline-flex items-center justify-center rounded-full border border-white/10 bg-white/5 px-4 py-1 text-xs font-semibold uppercase tracking-[0.3em] text-cyan-200/80">
        Paket Maskom Network
      </span>
      <h2 class="font-cal text-3xl sm:text-4xl md:text-5xl font-semibold text-white">
        Pilih layanan yang tumbuh bersama bisnis Anda
      </h2>
      <p class="mx-auto max-w-2xl text-sm md:text-base text-white/60">
        Backbone fiber dedicated berlatensi rendah dengan dukungan engineer lokal yang responsif di setiap level paket.
      </p>
    </div>

    <div class="mt-14 grid gap-8 md:grid-cols-3">
      {packages.map((pkg) => (
        <article class:list={["plan-card", pkg.featured ? "plan-card--featured" : ""]} style={`--plan-accent: ${pkg.accent}; --plan-glow: ${pkg.glow};`}>
          <div class="plan-card__halo"></div>
          <div class="plan-card__outline"></div>
          <div class="plan-card__content">
            <span class="plan-badge">{pkg.badge}</span>
            <h3 class="text-2xl font-semibold text-white">{pkg.displayName}</h3>
            <p class="mt-3 text-sm text-white/70">{pkg.description}</p>
            <ul class="mt-6 space-y-3 text-sm text-white/80">
              {pkg.highlights?.map((item) => (
                <li class="flex items-start gap-3">
                  <span class="plan-bullet" aria-hidden="true"></span>
                  <span>{item}</span>
                </li>
              ))}
            </ul>
            <a
              href={pkg.ctaLink}
              target="_blank"
              rel="noopener noreferrer"
              class="plan-cta"
            >
              {pkg.ctaText}
            </a>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  #paket {
    scroll-margin-top: 7rem;
  }

  .packages-grid {
    position: absolute;
    inset: 0;
    background-image: linear-gradient(rgba(148,163,184,0.06) 1px, transparent 0),
      linear-gradient(90deg, rgba(148,163,184,0.06) 1px, transparent 0);
    background-size: 48px 48px;
    opacity: 0.15;
    mask-image: radial-gradient(circle at center, rgba(0,0,0,1), rgba(0,0,0,0));
    pointer-events: none;
  }

  .packages-glow {
    position: absolute;
    inset: 20% 10%;
    border-radius: 9999px;
    background: radial-gradient(circle, rgba(129,140,248,0.15), rgba(2,132,199,0));
    filter: blur(60px);
    opacity: 0.5;
    pointer-events: none;
    mix-blend-mode: screen;
  }

  .plan-card {
    position: relative;
    border-radius: 1.75rem;
    padding: 2.5rem 2.25rem;
    background: rgba(9, 14, 24, 0.6);
    border: 1px solid rgba(148,163,184,0.15);
    overflow: hidden;
    transition: transform 0.2s ease,
      border-color 0.2s ease,
      background 0.2s ease;
  }

  .plan-card::after {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: inherit;
    background: radial-gradient(circle at top, rgba(148,163,184,0.06), transparent 65%);
    opacity: 0.5;
    pointer-events: none;
    z-index: 0;
  }

  .plan-card__halo,
  .plan-card__outline {
    position: absolute;
    inset: -1px;
    border-radius: inherit;
    pointer-events: none;
    opacity: 0;
    transition: opacity 0.2s ease;
    z-index: 0;
  }

  .plan-card__halo {
    background: radial-gradient(circle, var(--plan-glow, rgba(99,102,241,0.4)), transparent 65%);
  }

  .plan-card__outline {
    border: 1px solid color-mix(in srgb, var(--plan-accent, #6366f1) 50%, transparent);
  }

  .plan-card__content {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .plan-card--featured {
    background: rgba(12, 20, 35, 0.8);
    border-color: color-mix(in srgb, var(--plan-accent, #6366f1) 30%, rgba(148,163,184,0.15));
  }

  .plan-card:hover {
    transform: translateY(-4px);
    border-color: color-mix(in srgb, var(--plan-accent, #6366f1) 40%, rgba(148,163,184,0.15));
    background: rgba(12, 19, 33, 0.75);
  }

  .plan-card:hover .plan-card__halo,
  .plan-card:hover .plan-card__outline {
    opacity: 1;
  }

  .plan-badge {
    align-self: flex-start;
    border-radius: 9999px;
    border: 1px solid color-mix(in srgb, var(--plan-accent, #6366f1) 60%, rgba(255,255,255,0.06));
    background: color-mix(in srgb, var(--plan-accent, #6366f1) 12%, transparent);
    padding: 0.35rem 1rem;
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.22em;
    color: color-mix(in srgb, var(--plan-accent, #6366f1) 65%, white 35%);
  }

  .plan-bullet {
    display: inline-flex;
    width: 0.75rem;
    height: 0.75rem;
    border-radius: 9999px;
    background: radial-gradient(circle, var(--plan-accent, #6366f1), rgba(255,255,255,0));
    box-shadow: 0 0 10px -2px var(--plan-glow, rgba(99,102,241,0.55));
    margin-top: 0.35rem;
  }

  .plan-cta {
    margin-top: auto;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    margin-top: 2.5rem;
    padding: 0.875rem 1.75rem;
    border-radius: 9999px;
    font-weight: 600;
    font-size: 0.95rem;
    color: #0f1115;
    background: linear-gradient(135deg, var(--plan-accent, #6366f1), #60a5fa, #22d3ee);
    box-shadow: 0 12px 30px -22px var(--plan-glow, rgba(99,102,241,0.35));
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .plan-cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 18px 40px -28px var(--plan-glow, rgba(99,102,241,0.45));
  }

  @media (max-width: 768px) {
    .plan-card {
      padding: 2.25rem;
    }
  }
</style>
