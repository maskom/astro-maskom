---
// Offline Status Indicator Component
---

<div id="offline-status" class="fixed top-4 left-4 bg-gray-800 text-white px-3 py-2 rounded-lg shadow-lg text-sm hidden z-50 flex items-center space-x-2">
  <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
  </svg>
  <span>Offline Mode</span>
</div>

<div id="online-status" class="fixed top-4 left-4 bg-green-600 text-white px-3 py-2 rounded-lg shadow-lg text-sm hidden z-50 flex items-center space-x-2">
  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
  </svg>
  <span>Online</span>
</div>

<script>
  const offlineStatus = document.getElementById('offline-status');
  const onlineStatus = document.getElementById('online-status');
  
  function updateOnlineStatus() {
    if (navigator.onLine) {
      console.log('Network: Online');
      offlineStatus.classList.add('hidden');
      onlineStatus.classList.remove('hidden');
      
      // Hide online status after 3 seconds
      setTimeout(() => {
        onlineStatus.classList.add('hidden');
      }, 3000);
    } else {
      console.log('Network: Offline');
      onlineStatus.classList.add('hidden');
      offlineStatus.classList.remove('hidden');
    }
  }

  // Listen for online/offline events
  window.addEventListener('online', updateOnlineStatus);
  window.addEventListener('offline', updateOnlineStatus);

  // Initial status check
  updateOnlineStatus();

  // Periodic connection check
  setInterval(async () => {
    try {
      const response = await fetch('/api/status', {
        method: 'HEAD',
        cache: 'no-cache'
      });
      
      if (response.ok && !navigator.onLine) {
        // Browser thinks we're offline but we're actually online
        window.dispatchEvent(new Event('online'));
      }
    } catch (error) {
      // Can't reach server, we're probably offline
      if (navigator.onLine) {
        window.dispatchEvent(new Event('offline'));
      }
    }
  }, 30000); // Check every 30 seconds
</script>