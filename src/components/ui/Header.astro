---

<header class="bg-white py-4 shadow-md">
  <div class="container mx-auto px-4 flex justify-between items-center">
    <div class="text-2xl font-bold text-gray-800">
      <a href="/" class="flex items-center">
        <img src="/logo-maskom.png" alt="Maskom Network Logo" class="h-10 mr-2">
        Maskom Network
      </a>
    </div>
    <nav class="hidden md:flex space-x-6">
      <a href="#home" class="text-gray-600 hover:text-blue-600 font-medium">Home</a>
      <a href="#services" class="text-gray-600 hover:text-blue-600 font-medium">Layanan</a>
      <a href="#about" class="text-gray-600 hover:text-blue-600 font-medium">Tentang Kami</a>
      <a href="#contact" class="text-gray-600 hover:text-blue-600 font-medium">Kontak</a>
      <a href="https://panel.maskom.co.id/" target="_blank" rel="noopener noreferrer" class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition duration-300">Login Pelanggan</a>
    </nav>
    <div class="md:hidden">
      <button id="menu-button" class="text-gray-600 hover:text-blue-600 focus:outline-none">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
        </svg>
      </button>
    </div>
  </div>
  <div id="mobile-menu" class="hidden md:hidden bg-white shadow-lg">
    <nav class="px-2 pt-2 pb-3 space-y-1">
      <a href="#home" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-white hover:bg-blue-500">Home</a>
      <a href="#services" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-white hover:bg-blue-500">Layanan</a>
      <a href="#about" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-white hover:bg-blue-500">Tentang Kami</a>
      <a href="#contact" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-white hover:bg-blue-500">Kontak</a>
      <a href="https://panel.maskom.co.id/" target="_blank" rel="noopener noreferrer" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-white hover:bg-blue-500">Login Pelanggan</a>
    </nav>
  </div>
</header>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const menuButton = document.getElementById('menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    if (menuButton && mobileMenu) {
      menuButton.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
      });
    }
  });
</script>
