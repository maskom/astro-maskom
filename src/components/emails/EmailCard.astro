---
// Card component for emails
export interface CardProps {
  title?: string;
  backgroundColor?: string;
  borderColor?: string;
}

const { title, backgroundColor = '#F9FAFB', borderColor = '#E5E7EB' } = Astro.props;
---

<table border="0" cellpadding="0" cellspacing="0" width="100%">
  <tr>
    <td align="center" style="padding: 20px 0;">
      <table border="0" cellpadding="0" cellspacing="0" width="100%" style="background-color: {backgroundColor}; border: 1px solid {borderColor}; border-radius: 8px;">
        {title && (
          <tr>
            <td align="left" style="padding: 20px 24px 16px; border-bottom: 1px solid {borderColor};">
              <h3 style="margin: 0; font-size: 18px; font-weight: 600; color: #111827;">{title}</h3>
            </td>
          </tr>
        )}
        <tr>
          <td align="left" style="padding: 20px 24px;">
            <slot />
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>