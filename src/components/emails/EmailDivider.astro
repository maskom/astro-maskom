---
// Divider component for emails
export interface DividerProps {
  color?: string;
  height?: number;
}

const { color = '#E5E7EB', height = 1 } = Astro.props;
---

<table border="0" cellpadding="0" cellspacing="0" width="100%">
  <tr>
    <td align="center" style="padding: 20px 0;">
      <table border="0" cellpadding="0" cellspacing="0" width="100%" style="border-top: {height}px solid {color};">
        <tr>
          <td style="height: 1px; line-height: 1px;">&nbsp;</td>
        </tr>
      </table>
    </td>
  </tr>
</table>